{
    "name": "jorgecortesdev/xpression",
    "type": "libary",
    "description": "A just for fun expression parser",
    "license": "MIT",
    "keywords": ["math", "shunting yard", "expression parser"],
    "authors": [
        {
            "name": "Jorge Cortes",
            "email": "jorge.cortes@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "friendsofphp/php-cs-fixer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "JorgeCortesDev\\Xpression\\": "src/JorgeCortesDev/Xpression"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/Utilities/functions.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testdox",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    }
}
